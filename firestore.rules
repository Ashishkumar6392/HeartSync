/**
 * @file Firebase Security Rules for HeartSync Dating App
 *
 * @description This ruleset enforces a strict user-ownership model for user accounts
 * and a membership-based model for conversations.
 *
 * @dataStructure
 * - /users/{userId}: Stores user account information, accessible only by the owner.
 * - /conversations/{conversationId}: Stores conversation metadata.
 * - /conversations/{conversationId}/messages/{messageId}: Stores individual messages within a conversation.
 *
 * @keySecurityDecisions
 * - Disallows global user listing for privacy.
 * - Enforces ownership for all data under /users/{userId}.
 * - Restricts conversation access to participants only.
 *
 * @denormalizationForAuthorization
 * - User account documents under /users/{userId} contain a denormalized `id` field that must match the `userId` in the path.
 * - Conversation documents under /conversations/{conversationId} contain a `participants` array.
 *
 * @structuralSegregation
 * - User data is in /users.
 * - Conversation data is in /conversations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isParticipant(conversationId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }

    /**
     * @description Secure user accounts. Only the user with the matching userId can access their data.
     */
    match /users/{userId} {
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure conversations and messages.
     * Access is granted only to participants of the conversation.
     */
    match /conversations/{conversationId} {
      // Allow reading the conversation document (participants list, last message)
      allow get: if isParticipant(conversationId);
      allow list: if isSignedIn() && request.auth.uid in request.query.where.participants;

      // Allow creating a conversation if the user is a participant
      // and the participants list in the new document is a list of size 2.
      allow create: if isSignedIn() &&
                       request.auth.uid in request.resource.data.participants &&
                       request.resource.data.participants is list &&
                       request.resource.data.participants.size() == 2;

      // Allow updating (e.g., lastMessage) if the user is a participant.
      allow update: if isParticipant(conversationId);

      // Disallow deleting conversations.
      allow delete: if false;

      /**
       * @description Secure messages within a conversation.
       */
      match /messages/{messageId} {
        // Allow reading messages if the user is a participant in the parent conversation.
        allow get, list: if isParticipant(conversationId);

        // Allow creating a message if the user is a participant and the senderId matches their UID.
        allow create: if isParticipant(conversationId) && request.resource.data.senderId == request.auth.uid;

        // Disallow updating or deleting messages to maintain chat history integrity.
        allow update, delete: if false;
      }
    }
  }
}
